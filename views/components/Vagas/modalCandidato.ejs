<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Candidato Aprovado</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <form onsubmit="return validarFormulario(event)" id="formCandidato">
                <div class="modal-body">
                    <div style="margin-top: 1.5%">

                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    <label for="exampleInputText" style="font-size: 16px;" class="form-label">Nome Completo Do Candidato
                                        Aprovado:</label>
                                    <input type="text" class="form-control border-secondar campo-obrigatorio shadow-none"
                                        id="nomeCompleto" aria-describedby="textHelp"  placeholder=""
                                        name="nomeProfissional">

                                </div>
                            </div>
                            <div class="col">
                                <label for="exampleInputText" class="form-label" style="font-size: 16px;">Tutor Durante o
                                    Onboarding:</label>
                                <input type="text" class="form-control campo-obrigatorio border-secondar shadow-none" id="tutor"
                                    aria-describedby="textHelp"  placeholder="" name="tutorOnboarding">

                            </div>
                        </div>

                        <div class="row">
                            <div class="col mb-3">
                                <label for="exampleInputText" class="form-label" style="font-size: 16px;">Telefone Pessoal:</label>
                                <input type="tel" class="form-control campo-obrigatorio border-secondar shadow-none" id="telPessoal"
                                    aria-describedby="textHelp"  placeholder="" onkeyup="mascaraTelefone(event)"
                                    maxlength="15" name="Telefone">

                            </div>
                            <div class="col">
                                <label for="exampleInputText" class="form-label" style="font-size: 16px;">E-mail Pessoal:</label>
                                <input type="text" class="form-control campo-obrigatorio border-secondar shadow-none" id="emailPessoal"
                                    aria-describedby="textHelp"  placeholder="" name="email">

                            </div>
                            <div class="col">
                                <label for="exampleInputText" class="form-label">Indicação Premiada:</label>
                                <select name="indicacaoPremiada" id="indicPremiada" class="form-control">
                                    <option selected value="">Selecione...</option>
                                  </select>

                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col">
                                <label for="exampleInputText" class="form-label" style="font-size: 16px;">Email Corporativo:</label>
                                <input type="tel" class="form-control campo-obrigatorio border-secondar shadow-none" id="emailCorporativo"
                                    aria-describedby="textHelp"  placeholder="" name="emailCorporativo">

                            </div>
                            <div class="col">
                                <label for="exampleInputText" class="form-label" style="font-size: 16px;">PCD:</label>
                                <br>
                                <div class="form-check form-check-inline mt-2">
                                    <input class="form-check-input shadow-none" type="radio" name="pcd" id="radio09"
                                        value="S" >
                                    <label class="form-check-label">Sim</label>
                                </div>
                                <div class="form-check form-check-inline" style="margin-left: 5%;">
                                    <input class="form-check-input shadow-none" checked type="radio" name="pcd" id="radio10"
                                        value="N" >
                                    <label class="form-check-label">Não</label>
                                </div>

                            </div>
                            <div class="col">
                                <label for="exampleInputText" class="form-label" style="font-size: 16px;">Data de Inicio:</label>
                                <input type="date" class="form-control campo-obrigatorio border-secondar shadow-none" id="dateInicio"
                                    aria-describedby="textHelp"  placeholder="indicação premiada"
                                    name="dataInicio">

                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <label for="exampleInputText" class="form-label" style="font-size: 16px;">Modalidade de
                                    Trabalho:</label>
                                <select class="form-control campo-obrigatorio border-secondar shadow-none"
                                    aria-label="Default select example" id="mdtrabalho"  name="modalidade">
                                    <option value="">Selecione....</option>
                                    <option value="Presencial">Presencial</option>
                                    <option value="Híbrido">Híbrido</option>
                                    <option value="Remoto">Remoto</option>
                                </select>

                            </div>
                            <div class="col">
                                <label for="exampleInputText" class="form-label" style="font-size: 16px;">Escala Sobreaviso:</label>
                                <br>
                                <div class="form-check form-check-inline mt-2">
                                    <input class="form-check-input shadow-none" type="radio" name="escala" id="radio11"
                                        value="S" >
                                    <label class="form-check-label">Sim</label>
                                </div>
                                <div class="form-check form-check-inline" style="margin-left: 5%;">
                                    <input class="form-check-input shadow-none" checked type="radio" name="escala" id="radio12"
                                        value="N" >
                                    <label class="form-check-label">Não</label>
                                </div>

                            </div>
                            <div class="col">
                                <label for="exampleInputText" class="form-label" style="font-size: 16px;">Treinamento:</label>
                                <select class="form-control campo-obrigatorio border-secondar shadow-none"
                                    aria-label="Default select example" id="treinamento"  name="treinamentos">
                                    <option value="">Selecione....</option>
                                    <option value="Presencial">Presencial</option>
                                    <option value="Online">Online</option>
                                </select>

                            </div>
                        </div>

                        <h5 style="border-bottom:1px solid #120947; margin-top: 1%;">Observações Gerais
                        </h5>
                        <div style="margin-top: 0.5%">
                            <div class="row">
                                <div class="col">
                                    <div class="mb-3">
                                        <label for="exampleInputTextArea" class="form-label" style="border-bottom:1px solid #120947;
                                  font-size: 16px;">Negociação Diferenciada que for alinhada
                                            com o profissional</label>
                                        <input type="text" class="form-control campo-obrigatorio"  name="observacoes">
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-success">Salvar</button>

                </div>


            </form>

        </div>
    </div>
</div>
