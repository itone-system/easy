          <div class="container">
            <button type="button" id="modalAdiantamento" class="btn btn-primary" data-toggle="modal" data-target="#myModal" hidden> 
            </button>
          
            <div class="modal fade" id="myModal">
              <div class="modal-dialog modal-lg">
                <div class="modal-content">
                
                  <div class="modal-header">
                    <h4 class="modal-title">Adiantamento</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                  </div>
                  
                  <div class="modal-body">

                    <div class="row g-3">
                      <div class="col Descricao">
                        <label>Item Solicitado:</label>
                        <input id="DescricaoModal" for="Descricao" type="text" class="form-control mandatory" placeholder="Descricao Item"
                          name="descricao">
                          <div id="descricaoObrigatorio"></div>
      
                      </div>
                      <div class="col Quantidade">
                        <label>Quantidade:</label>
